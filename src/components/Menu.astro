---
const Links = [
    {
        name: "bidon",
        link: "bidon",
    },
    {
        name: "soda",
        link: "soda",
    },
    {
        name: "hielo",
        link: "hielo",
    },
];
---

<nav>
    <a
        id="menu-button"
        data-collapse-toggle="navbar-sticky"
        data-nav-toggle="#navbar-sticky"
        class="cursor-pointer text-black lg:hidden"
        aria-controls="navbar-sticky"
        aria-expanded="false"
    >
        <div class="p-2 hover:bg-kai-200 rounded-md dark:hover:bg-kai-900">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline scale-100 icon-tabler-menu"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                    d="M4 8l16 0"></path><path d="M4 16l16 0"></path></svg
            >
        </div>
    </a>
    <div id="menu-open" class="hidden w-full navbar" id="navbar-sticky">
        <div
            class="bg-white animate-fade-right animate-duration-300 animate-delay-0 dark:bg-kai-bg w-[50vw] md:w-[40vw] h-[calc(100vh-90px)] lg:hidden left-0 top-[89px] absolute pl-6 font-medium md:mt-0"
        >
            <div class="flex flex-col justify-between h-full text-start">
                <div>
                    <ul class="w-fit mb-2">
                        <h3 class="mt-2"><b>Dashboard:</b></h3>
                        <li class="border-l dark:border-white border-black">
                            <a
                                href="/"
                                class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Inicio
                            </a>
                        </li>
                        <li class="border-l dark:border-white border-black">
                            <a
                                href="/productos"
                                class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                Productos
                            </a>
                        </li>
                        <li class="border-l dark:border-white border-black">
                            <a
                                href="/blog"
                                class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                aria-current="page"
                            >
                                blog
                            </a>
                        </li>
                    </ul>
                    <ul class="w-fit mb-2">
                        <h3 class="mt-2"><b>Productos:</b></h3>
                        {
                            Links.map((link) => (
                                <li class="border-l dark:border-white border-black">
                                    <a
                                        href={`${link.link}`}
                                        class="hover:underline text-start btn block py-2 pl-3 dark:text-white dark:hover:text-kai-text rounded md:bg-transparen md:py-1 hover:text-kai-text"
                                        aria-current="page"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.querySelector("#menu-button") as Element;
    const menuOpen = document.querySelector("#menu-open") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>
